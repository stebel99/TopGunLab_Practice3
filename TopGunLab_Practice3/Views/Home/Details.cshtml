@{
    ViewBag.Title = "Details";
}

@model TopGunLab_Practice3.Models.Product

@section Body{
    <h2>Details</h2>
    <table class="table table-hover">
        <tbody>
            <tr>
                <th scope="row" class="bg-info">Name</th>
                <td> @Model.Name</td>
            </tr>
            <tr>
                <th scope="row" class="bg-info">Quantity</th>
                <td> @Model.Quantity</td>
            </tr>
            <tr>
                <th scope="row" class="bg-info">Description</th>
                <td> @Model.Description</td>
            </tr>
        </tbody>
    </table>
}
@{
    ViewBag.Title = "Products";
}
@model List<TopGunLab_Practice3.Models.Product>
@section Body{
    <table class="table table-hover">
        <caption class="h1" style="font-family:'Segoe UI'">Product list</caption>
        <thead class="bg-info">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count(); i++)
            {
                <tr>
                    <th scope="row">@(i + 1)</th>
                    <th>@Model[i].Name</th>
                    <th>
                        <div class="btn-group" role="group">
                            @Html.ActionLink("Details", "Details", "Home", new { id = i }, new { @class = "btn btn-info" })
                        </div>
                    </th>
                </tr>
            }
        </tbody>
    </table>
}